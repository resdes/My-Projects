while 1==1:
    operation = input("İşlem Seçiniz (1-5)")
    if operation =="5":
        exit(0)
    elif int(operation) >5:
        print("Lütfen tekrar işlem seçiniz")
    elif int(operation) <=5:
        break
num1 = int(input("1. sayıyı girin:"))
num2 = int(input("2. sayıyı girin:"))
if operation =="1":
    proggressBar()
    print("Sonucunuz,",num1+num2)
elif operation =="2":
    proggressBar()
    print("Sonucunuz,",num1-num2)
elif operation =="3":
    proggressBar()
    print("Sonucunuz,",num1*num2)
elif operation =="4":
    proggressBar()
    print("Sonucunuz,",num1/num2)
