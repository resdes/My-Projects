import time
import random
def proggressBar():
    print("Hesaplanıyor")
    for i in range (0,11):
        zaman = float("0."+str(random.randint(50,100)))
        print (".",end="")
        time.sleep(zaman)
    print(".")
    print("Hesaplanmıştır")
